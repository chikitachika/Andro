<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="28dp"
    android:background="@color/colorLightBlue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Selamat Datang di E Notaris"
        android:fontFamily="@font/bebas_regular"
        android:textSize="25dp"
        android:textColor="@color/navy"
        android:gravity="center">

    </TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:src="@drawable/iconfinder_3_avatar_2754579" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/custom"
        android:fontFamily="@font/bebas_regular"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:text="Log In notaris"
        android:id="@+id/login"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/custom2"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bebas_regular"
        android:textSize="18dp"
        android:text="Log In client"
        android:id="@+id/login2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="atau"
        android:gravity="center"
        android:fontFamily="@font/bebas_regular"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="6dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="6dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bebas_regular"
            android:textSize="18dp"
            android:background="@color/abu"
            android:text="daftar notaris"
            android:id="@+id/signup"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            android:background="@color/abu"
            android:textColor="@android:color/white"
            android:fontFamily="@font/bebas_regular"
            android:textSize="18dp"
            android:text="daftar client"
            android:id="@+id/signup2"/>

    </LinearLayout>

</LinearLayout>